{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "src", // Your backend source directory
        "outDir": "dist", // Your backend build output
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
